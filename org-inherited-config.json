{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "automerge": false,
  "extends": [
    "config:recommended"
  ],
  "labels": [
    "dependencies",
    "{{{manager}}}"
  ],
  "onboarding": true,
  "packageRules": [
    {
      "extends": ["monorepo:dotnet"],
      "description": ["Disable major version updates for .NET"],
      "matchUpdateTypes": ["major"],
      "enabled": false
    }
  ],
  "prConcurrentLimit": 0,
  "requireConfig": "required",
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security"]
  }
}
